---
import Layout from "../../layouts/BlogPost.astro";
import { getBlogs, getBlogDetail } from "../../library/microcms";

// 生成する記事のIDを全て取得
export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });
  return response.contents.map((content: any) => ({
    params: {
      blogId: content.id,
    },
  }));
}

//記事の詳細情報を取得
const { blogId } = Astro.params;
const blog = await getBlogDetail(blogId as string);
---

<Layout title="My first blog with Astro" description="ディスクリプション" pubDate={new Date()} heroImage="">
  <main>
    <!-- <figure>
      <img src={blog.eyecatch?.url ?? ''} alt="アイキャッチ" width="" height="">
    </figure> -->
    <h1 class="title">{blog.title}</h1>
    <a href={blog.category?.url ?? ''} class="">{blog.category?.name}</a>
    <p class="publishedAt">公開日時：{blog.publishedAt}</p>
    <p class="updatedAt">アップデート日時：{blog.updatedAt}</p>
    <div class="post" set:html={blog.content}></div>
    <a href="/blog" class="p-1 bg-yellow-400 block text-center rounded-full text-white shadow dark:bg-blue-900 m-auto w-48">一覧へ</a>

  </main>
</Layout>
